.container {
  height: 100vh;
  background: #F6F6F6;
  box-sizing: border-box;
}
.title {
  height: calc(100vh - 1005rpx);
  line-height: calc(100vh - 1005rpx);
  text-align: center;
  font-size: 40rpx;
}
/* 金额输入框 */
.bookkeep__amount {
  font-size: 80rpx;
  height: 100rpx;
  margin: 0 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #CCCCCC;
  line-height: 100rpx;
  display: flex;
  align-content: center;
}

.bookkeep__amount-input {
  flex: 1;
  height: 100rpx;
  letter-spacing: 10px;
}

/* 类型选择框 */
.bookkeep__class-box {
  height: 190rpx;
  padding: 30rpx 0 30rpx 30rpx;
  box-sizing: border-box;
  /* background: blue; */
  white-space: nowrap;
  display: flex;
}

.bookkeep__class {
  width: 120rpx;
  height: 130rpx;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.bookkeep__class image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.bookkeep__class text{
  font-size: 11px;
  color: #DDDDDD;
}

/* 备注输入框 */
.bookkeep__remark-input {
  padding: 0 30rpx;
  /* height: 28rpx; */
} 


/* 自定义数字键盘 */
.keyboard{
  width: 100vw;
  padding: 30rpx;
  box-sizing: border-box;
  background: #F6F6F6;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: space-between;
  text-align: center;
}

.key {
  width: calc((100vw - 30rpx - 60rpx)/4);
  box-sizing: border-box;
  background: #FFFFFF;
  border-radius: 10px;
  line-height: 110rpx;
  margin-bottom: 12rpx;
}

.key.flex2 {
  width: calc((100vw - 30rpx - 40rpx)/2);
}

/* 底部3层键盘 */
.keyboard-bottom3 {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: space-between;
  text-align: center;
}
/* 底部3层左侧数字键盘 */
.keyboard-bottom3-num {
  flex: 3;
  margin-right: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: space-between;
}
/* 键盘每行 */
.keyboard-row {
  flex: 1;
  width: 100%;
  /* border-radius: 98rpx; */
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: space-between;
}

/* 底部按钮margin清0 */
.zero, .dot, .submit{
  margin-bottom: 0;
}
/* 确定按钮文字居中 */
.submit {
  background: #16C2C2;
  color: #FFFFFF;
  line-height: 354rpx;
}