<!--index.wxml-->
<view class="container">
  <!-- 账目详情卡片 -->
  <view class="account-detail">
    <!-- 账目详情 - 分类 -->
    <view class="account-category">
      <image src="/images/console-entrance.png" mode="aspectFill"></image>
      <text>餐饮</text>
    </view>
    <!-- 账目详情 - 金额 -->
    <view class="account-amount">
      - 78.00
    </view>
    <!-- 账目详情 - 其他信息 -->
    <view class="account-infos">
      <view class="account-info">
        <text class="account-info__label">记录时间</text>
        <text class="account-info__value">2020年4月18日 18:46</text>
      </view>
      <view class="account-info">
        <text class="account-info__label">来源</text>
        <text class="account-info__value">自动同步</text>
      </view>
      <view class="account-info">
        <text class="account-info__label">备注</text>
        <text class="account-info__value">扫码付款</text>
      </view>
    </view>
    <!-- 账目详情 - 按钮 -->
    <view class="account-btns">
      <view bindtap="delAccount" class="account-btn del">删除</view>
      <view bindtap="editAccount" class="account-btn edit">编辑</view>
    </view>
  </view>
</view>