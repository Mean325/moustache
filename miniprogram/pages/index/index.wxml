<!--index.wxml-->
<view class="container">
  <image class="bg-image" src="/images/index/bg.jpg" mode="aspectFill"></image>
  <scroll-view
    class="scroll-view"
    scroll-y="true"
    enable-back-to-top
    bindscrolltoupper="upper"
    bindscrolltolower="lower"
    bindscroll="scroll"
    scroll-into-view="{{toView}}"
    scroll-top="{{scrollTop}}"
  >
    <view class="bill">
      <view class="bill__amount-title">
        本月支付(元)
      </view>
      <view class="bill__amount">
        1000.00
      </view>
      <view class="bill__day">
        <view class="bill__entry bill__day-amount">
          <text>今日</text>
          <view class="bill__line"></view>
          <text>{{ todayAmount }}</text>
        </view>
        <view wx:for="{{ todayBill }}" wx:key="{{ item._id }}" class="bill__entry">
          <text>{{ item.category }}</text>
          <text>{{ item.num }}</text>
        </view>
      </view>
      <view class="bill__month">
        <view class="bill__entry bill__month-amount">
          <text>2020年3月</text>
          <text>收入 0 支出 3000.9</text>
        </view>
        <view class="bill__entry bill__day-amount">
          <text>今日</text>
          <view class="bill__line"></view>
          <text>30.9</text>
        </view>
        <view class="bill__entry">
          <text>日用</text>
          <text>30.9</text>
        </view>
        <view class="bill__entry">
          <text>日用</text>
          <text>30.9</text>
        </view>
        <view class="bill__entry">
          <text>日用</text>
          <text>30.9</text>
        </view>
        <view class="bill__entry">
          <text>日用</text>
          <text>30.9</text>
        </view>
        <view class="bill__entry">
          <text>日用</text>
          <text>30.9</text>
        </view>
        <view class="bill__entry">
          <text>日用</text>
          <text>30.9</text>
        </view>
      </view>
      <navigator url="/pages/bookkeep/bookkeep" class="bookkeep-btn">记一笔</navigator>
    </view>
  </scroll-view>
</view>