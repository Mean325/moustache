/**index.wxss**/

page {
  background: #f6f6f6;
}

.container {
  position: relative;
}

.bg-image {
  width: 100vw;
  height: 100vh;
  position: absolute;
  z-index: -1;
}

.scroll-view {
  height: 100vh;
}


/* 账本 */
.bill {
  height: 500rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  text-align: right;
  /* padding-top: calc(100vh - 500rpx - 120rpx); */
  color: #FFFFFF;
}

/* 今日账本信息 */
.bill__today {
  padding-bottom: 30rpx;
}

/* 顶部当月账单支出 */
.bill__amount-title {
  font-size: 40rpx;
}

.bill__amount {
  font-size: 100rpx;
}

/* 历史账单 - 每月合计 */
.bill__month-amount {
  margin-top: 120rpx;
}

/* 账单每日 */
/* .bill__day {
  padding-bottom: 120rpx;
} */
/* 账单条目 */
.bill__entry, .bill__day-amount {
  height: 68rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 账单每日金额 */
.bill__day-amount {
  font-size: 40rpx;
}
/* 账单每日金额 - 分割线 */
.bill__line {
  flex: 1;
  height: 2px;
  background: #FFFFFF;
  margin: 0 20px;
}

/* 底部记账按钮 */
.bookkeep-btn.style1 {
  height: 60rpx;
  width: calc(100vw - 60rpx);
  background: #16C2C2;
  color: #FFFFFF;
  line-height: 60rpx;
  text-align: center;
  border-radius: 6px;
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
}

.bookkeep-btn.style2 {
  height: 86rpx;
  width: 110rpx;
  background: rgba(255, 255, 255, 0.5);
  color: #000000;
  font-size: 24px;
  line-height: 86rpx;
  text-align: center;
  border-radius: 40rpx 0 0 40rpx;
  position: fixed;
  bottom: 540rpx;
  right: 0;
}