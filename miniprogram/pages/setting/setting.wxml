<!--index.wxml-->
<view class="container">
  <!-- 用户信息 -->
  <view class="weui-cells weui-cells_after-title">
    <navigator url="/pages/login/login" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd" style="height: 50px;">
        <image wx:if="{{ userInfo.avatarUrl }}" class="userinfo-avatar" src="{{ userInfo.avatarUrl }}"></image>
        <image wx:else class="userinfo-avatar" src="{{ unloginAvatar }}"></image>
      </view>
      <view class="weui-cell__bd">{{ userInfo.nickName || "立即登录" }}</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
  <!-- 其余设置 -->
  <view class="weui-cells weui-cells_after-title">
    <navigator url="/pages/classManage/classManage" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="{{icon}}" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">分类管理</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
    <navigator url="/pages/test/index1/index" class="weui-cell weui-cell_example weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="{{icon}}" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">cell standard</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">云开发案例</view>
    </navigator>
  </view>
  <!-- 管理员设置 - 仅超级管理员显示 -->
  <view wx:if="{{ userInfo.openid === 'o8Hls5RluXwV-Hktw2CNiiIEFe2M' }}" class="weui-cells weui-cells_after-title">
    <navigator url="/pages/admin/index/index" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="{{icon}}" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">小程序设置</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">超级管理员</view>
    </navigator>
  </view>
  <!-- 关于 -->
  <view class="weui-cells weui-cells_after-title">
    <navigator url="/pages/about/about" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__hd">
        <image src="{{icon}}" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
      </view>
      <view class="weui-cell__bd">关于</view>
      <view class="weui-cell__ft weui-cell__ft_in-access"></view>
    </navigator>
  </view>
  <!-- 退出登录 -->
  <a class="weui-btn_cell weui-btn_cell-default">退出登录</a>
  <!-- <button class="sign-out-button" hover-class="weui-cell_active" style="width: 100%;">
    退出登录
  </button> -->
</view>