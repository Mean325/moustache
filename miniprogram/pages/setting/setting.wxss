.weui-cells, .sign-out-button {
  margin-top: 30rpx;
}

/* 用户头像 */

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin-right: 16px;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

/* 退出登录cell */

.sign-out-button {
  padding: 16px;
  line-height: 24px;
  height: 56px;
  background: #FFFFFF;
  text-align: center;
  position: relative;
  font-weight: normal;
}


.sign-out-button::before, .sign-out-button::after {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 1px;
  color: rgba(0, 0, 0, 0.1);
}

.sign-out-button::before {
  top: 0;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.sign-out-button::after {
  bottom: -1rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
