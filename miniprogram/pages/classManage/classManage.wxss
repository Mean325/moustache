.operate-bar {
  display: flex;
  padding: 30rpx;
}
/* 分类类别选择栏 */
.operate-bar__types {
  flex: 1;
  background: #CCCCCC;
  border: 3px solid #CCCCCC;
  display: flex;
  border-radius: 8px;
  font-size: 12px;
  line-height: 20px;
}

.operate-bar__type {
  width: 50%;
  text-align: center;
}

.operate-bar__type-active {
  background: #FFFFFF;
  border-radius: 5px;
}
/* 添加分类按钮 */
.operate-bar__add-type {
  height: 52rpx;
  width: 52rpx;
  margin-left: 30rpx;
}

.operate-bar__add-type image {
  width: 100%;
  height: 100%;
}