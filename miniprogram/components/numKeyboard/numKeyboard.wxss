.keyboard{
  height: 440rpx;
  width: 100vw;
  background: #F6F6F6;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: space-between;
  text-align: center;
}
.key {
  width: 100%;
  flex: 1;
  box-sizing: border-box;
  background: #FFFFFF;
  border: 2px solid #333333;
  border-radius: 10px;
  line-height: 110rpx;
}

/* 左侧数字键盘 */
.keyboard-num {
  flex: 2;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: space-between;
}
/* 右侧删除与确定按钮 */
.keyboard-operate {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.keyboard-row {
  flex: 1;
  width: 100%;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: space-between;

}

.flex2 {
  flex: 2;
}

.flex3 {
  flex: 3;
  line-height: 330rpx;
}